// Force Prisma client regeneration to fix model name issues

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model BetaApplication {
  id          String   @id @default(cuid())
  name        String
  email       String
  position    String
  // Resume stored in database (PDF only)
  resumeData     Bytes?
  resumeFilename String?
  resumeMimeType String?
  resumeSize     Int?
  phone       String?
  website     String?
  coverLetter String?
  status      String   @default("pending") // pending, reviewed, contacted, rejected
  notes       String?
  // Optional link to a JobPosting
  jobId       String?
  job         JobPosting? @relation(fields: [jobId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([jobId], map: "beta_applications_jobId_idx")
  @@map("beta_applications")
}

model JobPosting {
  id          String   @id @default(cuid())
  title       String
  slug        String
  category    String   // legacy category label
  categoryId  String?
  categoryRef JobCategory? @relation(fields: [categoryId], references: [id])
  type        String   // e.g., Full-time, Part-time, Contract
  location    String   // e.g., Remote, Onsite - City
  description String
  status      String   @default("published")
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  applications BetaApplication[]

  @@index([categoryId], map: "job_postings_categoryId_idx")
  @@map("job_postings")
}

model JobCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  icon      String?
  color     String?
  position  Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobs JobPosting[]

  @@map("job_categories")
}

model WaitlistEntry {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String
  website     String?
  companySize String?   // small, medium, large
  useCase     String?   // How they plan to use PayPerCrawl
  status      String    @default("pending") // pending, invited, accepted, rejected
  inviteToken String?   @unique
  invitedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("waitlist_entries")
}

model EmailLog {
  id        String   @id @default(cuid())
  to        String
  subject   String
  body      String
  status    String   // sent, failed, pending
  provider  String   // sendgrid, resend, etc.
  createdAt DateTime @default(now())

  @@map("email_logs")
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  // Ticketing fields
  category  String   @default("general") // general, support, careers
  ticketId  String   @unique @default(cuid())
  status    String   @default("open") // open, resolved, archived
  resolutionMessage String?
  resolvedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_submissions")
}

model BlogPost {
  id          String    @id @default(cuid())
  slug        String    @unique
  sourceUrl   String    @unique
  title       String
  content     String
  author      String?
  publishedAt DateTime?
  tags        String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("blog_posts")
}

// User Model
model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String?
  firebaseUid     String?   @unique
  hasActivePlan   Boolean   @default(false)
  planExpiresAt   DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  payments        Payment[]
  apiKeys         ApiKey[]
  sites           Site[]

  @@map("users")
}

// Payment Models
model Payment {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Razorpay fields
  orderId         String    @unique // Razorpay order_id
  paymentId       String?   @unique // Razorpay payment_id (null until payment complete)
  signature       String?   // Razorpay signature for verification
  
  // Payment details
  amount          Int       // Amount in cents (2500 for $25)
  currency        String    @default("USD")
  status          String    @default("created") // created, authorized, captured, failed, refunded
  
  // Metadata
  receipt         String?   // Custom receipt number
  notes           Json?     // Additional notes
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId], map: "payments_userId_idx")
  @@map("payments")
}

model Coupon {
  id           String    @id @default(uuid())
  code         String    @unique
  discount     Int       // amount in cents ($15 = 1500)
  discountType String    // percentage or fixed
  maxUses      Int?
  usedCount    Int       @default(0)
  expiresAt    DateTime?
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  
  @@index([code])
  @@map("coupons")
}

model SubscriptionPlan {
  id          String   @id @default(uuid())
  name        String
  price       Int      // in cents
  currency    String   @default("USD")
  features    Json
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  @@map("subscription_plans")
}

model ApiKey {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  key             String    @unique
  active          Boolean   @default(true)
  lastUsedAt      DateTime?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId], map: "api_keys_userId_idx")
  @@map("api_keys")
}

// Represents a user's WordPress site
model Site {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  url         String   // The WP site URL
  name        String?
  apiKey      String   @unique // Links to the API key used by the plugin
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  scrapedPages   ScrapedPage[]
  liveConnectors LiveConnector[]

  @@map("sites")
  @@unique([userId, url])
}

// Stores individual scraped pages/posts from the WP site
model ScrapedPage {
  id          String   @id @default(cuid())
  siteId      String
  site        Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  url         String   // Full URL of the page
  title       String?
  contentToon String?  // The TOON-formatted content
  originalJson Json?   // The original JSON data for reference
  status      String   @default("pending") // pending, scraped, failed
  lastScraped DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("scraped_pages")
  @@unique([siteId, url])
}

// ===========================================
// LIVE SYNC & TOOL API MODELS
// ===========================================

// Represents a configured connector for live data (per site)
model LiveConnector {
  id            String    @id @default(cuid())
  siteId        String
  site          Site      @relation(fields: [siteId], references: [id], onDelete: Cascade)
  
  type          String    // woocommerce, custom_json, webhook, rest_api
  name          String?   // Human-friendly name
  config        Json?     // Connector-specific config (polling interval, auth, etc.)
  status        String    @default("active") // active, paused, error
  
  lastEventAt   DateTime? // Last event received
  lastErrorAt   DateTime?
  lastError     String?
  eventCount    Int       @default(0)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  events        LiveEvent[]
  snapshots     LiveEntitySnapshot[]

  @@map("live_connectors")
  @@unique([siteId, type]) // One connector type per site for v1
}

// Append-only log of live events (for audit/debug)
model LiveEvent {
  id            String    @id @default(cuid())
  connectorId   String
  connector     LiveConnector @relation(fields: [connectorId], references: [id], onDelete: Cascade)
  
  eventId       String    // Idempotency key from source
  eventType     String    // e.g., product.price_or_stock.updated
  occurredAt    DateTime  // When the event happened at source
  payload       Json      // Full event payload
  
  // Denormalized for fast queries
  entityType    String?   // product, order, etc.
  entityId      String?   // SKU, product ID, etc.
  
  createdAt     DateTime  @default(now())

  @@map("live_events")
  @@unique([connectorId, eventId]) // Dedupe by eventId per connector
  @@index([connectorId, occurredAt])
  @@index([entityType, entityId])
}

// Latest snapshot per entity (for fast tool reads)
model LiveEntitySnapshot {
  id            String    @id @default(cuid())
  connectorId   String
  connector     LiveConnector @relation(fields: [connectorId], references: [id], onDelete: Cascade)
  
  entityType    String    // product, flight, stock, etc.
  entityId      String    // SKU, product ID, route code, etc.
  
  // Structured data for common fields (fast filtering)
  name          String?
  currency      String?
  price         Float?    // Effective/current price
  stockStatus   String?   // instock, outofstock, onbackorder
  stockQuantity Int?
  permalink     String?
  
  // Full payload for anything not normalized
  data          Json
  
  occurredAt    DateTime  // When this snapshot was captured
  expiresAt     DateTime? // Optional TTL
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("live_entity_snapshots")
  @@unique([connectorId, entityType, entityId]) // One snapshot per entity per connector
  @@index([connectorId, entityType])
  @@index([occurredAt])
}

// Audit log for Tool API queries
model ToolQueryLog {
  id            String    @id @default(cuid())
  apiKeyId      String?   // Which API key was used
  siteId        String?   // Which site was queried
  
  mode          String    // live_only, hybrid, kb_only
  question      String?   // The question asked
  filters       Json?     // Filters applied
  
  // Response metrics
  status        String    // success, error, rate_limited
  latencyMs     Int?
  resultCount   Int?
  
  // Error tracking
  errorMessage  String?
  
  createdAt     DateTime  @default(now())

  @@map("tool_query_logs")
  @@index([apiKeyId, createdAt])
  @@index([siteId, createdAt])
}
