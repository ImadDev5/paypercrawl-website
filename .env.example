# Database (Production PostgreSQL)
DATABASE_URL="postgresql://your_database_url_here"

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL_PRODUCTION=https://paypercrawl.tech

# Admin Authentication
ADMIN_API_KEY=your_secure_admin_key_here
ADMIN_EMAIL=your_admin_email_here

# Environment
NODE_ENV=development

# Firebase Configuration (Get these from your Firebase project settings)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET="your_jwt_secret_key_here"
JWT_EXPIRES_IN="1d"

# ===========================================
# CLOUDFLARE CONFIGURATION
# ===========================================
CLOUDFLARE_WORKER_URL=https://your-worker.workers.dev
CLOUDFLARE_CUSTOM_DOMAIN=https://api.your-domain.com
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# ===========================================
# API CONFIGURATION
# ===========================================
API_BASE_URL=https://api.your-domain.com/v1
API_VERSION=1.0.0
API_TIMEOUT=30000
ENVIRONMENT=development

# ===========================================
# TEST CONFIGURATION
# ===========================================
test_site=https://your-test-site.netlify.app/

# WordPress Configuration
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false
WP_ENVIRONMENT=development
WORDPRESS_SITE_URL=https://your-wordpress-site.com